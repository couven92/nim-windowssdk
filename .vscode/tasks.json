{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Compile Only",
            "suppressTaskName": true,
            "command": "nim",
            "echoCommand": true,
            "args": [
                "compile",
                "-c",
                "--nimcache:obj",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "Build",
            "suppressTaskName": true,
            "command": "nim",
            "echoCommand": true,
            "args": [
                "compile",
                "-o:bin/windowssdk",
                "--nimcache:obj",
                "src/windowssdk"
            ],
            "isBuildCommand": true,
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "Build (ANSI)",
            "suppressTaskName": true,
            "command": "nim",
            "echoCommand": true,
            "args": [
                "compile",
                "-d:useWinAnsi",
                "-o:bin/windowssdk",
                "--nimcache:obj",
                "src/windowssdk"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "Generate documentation",
            "suppressTaskName": true,
            "command": "nim",
            "echoCommand": true,
            "args": [
                "doc2",
                "--project", "src/windowssdk"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "Test",
            "suppressTaskName": true,
            "command": "nim",
            "echoCommand": true,
            "args": [
                "compile",
                "-r",
                "-o:bin/twindowssdk",
                "--nimcache:obj",
                "test/twindowssdk"
            ],
            "isTestCommand": true,
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "C Reference (VS2017 Community)",
            "suppressTaskName": true,
            "echoCommand": true,
            "command": "vccexe",
            "args": [
                "--vcvarsall:C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat",
                "--command:cl.exe",
                "--platform:x64",
                "--verbose",
                "/Fecref",
                "/DUNICODE",
                "main.c",
                "Secur32.lib"
            ],
            "options": {
                "cwd": "${workspaceRoot}/cref"
            }
        },
        {
            "taskName": "C Reference (VS2017 Enterprise)",
            "suppressTaskName": true,
            "echoCommand": true,
            "command": "vccexe",
            "args": [
                "--vcvarsall:C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Enterprise\\VC\\Auxiliary\\Build\\vcvarsall.bat",
                "--command:cl.exe",
                "--platform:x64",
                "--verbose",
                "/Fecref",
                "/DUNICODE",
                "main.c",
                "Secur32.lib"
            ],
            "options": {
                "cwd": "${workspaceRoot}/cref"
            }
        },
        {
            "taskName": "C Reference (automatic VS)",
            "suppressTaskName": true,
            "echoCommand": true,
            "command": "vccexe",
            "args": [
                "--command:cl.exe",
                "--platform:x64",
                "--verbose",
                "/Fecref",
                "/DUNICODE",
                "main.c",
                "Secur32.lib"
            ],
            "options": {
                "cwd": "${workspaceRoot}/cref"
            }
        }
    ]
}